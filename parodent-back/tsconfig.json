{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "outDir": "build",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictBindCallApply": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
    }